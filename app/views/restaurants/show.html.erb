<h1>The <%= @restaurant.name %> page</h1>
<br>
<div class="container">
  <h2>Restaurant Address: <%= @restaurant.address %> </h2>
  <br>
  <h2>Restaurant category: <%= @restaurant.category %> </h2>
  <br>
  <h2>Restaurant reviews:
    <% @restaurant.reviews.each do |review| %>
      <h3> <%= review.content %> ---  <%= "⭐️"* review.rating %></h3>
    <% end %>
  </h2>
  <br>

  <h1>Please enter details of your review for <strong> <%= @restaurant.name %></strong> </h1>
<br>

<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%#= f.error_notification %>
    <%#= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <!-- cest quoi ça? -->

    <div class="form-inputs">
      <%= f.input :content %>
      <%= f.input :rating %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class:"btn btn-primary"%>
    </div>
  <% end %>
</div>

  <div> <%= link_to 'Create a review for this restaurant', new_restaurant_review_path(@restaurant) %> </div>
  <br>
  <%= render 'navbar'%>
</div>
